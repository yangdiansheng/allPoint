<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg_color_2">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_bg_top_blue"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="还差1步即可激活额度" />


    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.身份认证"
                android:textColor="@color/load_main_bule"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_id_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="待认证"
                android:textColor="@color/load_main_bule"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.联系人"
                android:textColor="@color/load_main_bule"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_contact_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="待认证"
                android:textColor="@color/load_main_bule"
                android:textSize="12sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_operate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.运营商"
                android:textColor="@color/load_main_bule"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_operate_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="待认证"
                android:textColor="@color/load_main_bule"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/ll_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dialog_btn_blue_round"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/load_main_bule"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_continue"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_common_bottom_btn_selector"
            android:gravity="center"
            android:text="继续认证"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>